{
  "name": "media2md",
  "version": "0.1.1",
  "description": "Convert images to structured markdown with AI-generated descriptions and extracted text",
  "author": "Marc Vermeeren",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcvermeeren/media2md.git"
  },
  "homepage": "https://github.com/marcvermeeren/media2md",
  "type": "module",
  "bin": {
    "m2md": "dist/cli.js",
    "m2md-mcp": "dist/mcp.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "scripts/postinstall.js",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "postinstall": "node scripts/postinstall.js"
  },
  "keywords": [
    "markdown",
    "image",
    "ai",
    "claude",
    "vision",
    "ocr",
    "screenshot"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "commander": "^13.1.0",
    "cosmiconfig": "^9.0.0",
    "image-size": "^2.0.1",
    "openai": "^6.22.0",
    "picocolors": "^1.1.1"
  },
  "optionalDependencies": {
    "chokidar": "^4.0.0",
    "playwright": "^1.50.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  }
}
